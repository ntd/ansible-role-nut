# {{ ansible_managed }}

{% if nut_user %}
[{{ nut_user }}]
    password = {{ nut_password }}
    upsmon {{ nut_role }}

{% endif %}
{% for user in nut_users %}
[{{ user.name }}]
    password = {{ user.password }}
    upsmon {{ user.role }}
    {{ user.extra | default('') | indent(4) }}
{% endfor %}
